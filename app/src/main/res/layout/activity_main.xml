<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@drawable/background4"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="300dp"
        android:layout_height="280dp"
        android:adjustViewBounds="true"
        android:id="@+id/line"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="130dp"/>

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="120dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn1"
                android:textSize="40sp"
                android:src="@drawable/bluesquare"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp" />

            <ImageView
                android:textSize="40sp"
                android:id="@+id/btn2"
                android:layout_width="100dp"
                android:background="@drawable/bluesquare"
                android:layout_height="100dp"
                android:layout_margin="3dp" />

            <ImageView
                android:textSize="40sp"
                android:id="@+id/btn3"
                android:layout_width="100dp"
                android:background="@drawable/bluesquare"
                android:layout_height="100dp"
                android:layout_margin="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn4"
                android:textSize="40sp"
                android:src="@drawable/bluesquare"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp" />

            <ImageView
                android:textSize="40sp"
                android:id="@+id/btn5"
                android:layout_width="100dp"
                android:background="@drawable/bluesquare"
                android:layout_height="100dp"
                android:layout_margin="3dp" />

            <ImageView
                android:textSize="40sp"
                android:id="@+id/btn6"
                android:layout_width="100dp"
                android:background="@drawable/bluesquare"
                android:layout_height="100dp"
                android:layout_margin="3dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:id="@+id/btn7"
                android:textSize="40sp"
                android:src="@drawable/bluesquare"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="3dp" />

            <ImageView
                android:textSize="40sp"
                android:id="@+id/btn8"
                android:layout_width="100dp"
                android:background="@drawable/bluesquare"
                android:layout_height="100dp"
                android:layout_margin="3dp" />

            <ImageView
                android:textSize="40sp"
                android:id="@+id/btn9"
                android:layout_width="100dp"
                android:background="@drawable/bluesquare"
                android:layout_height="100dp"
                android:layout_margin="3dp" />
        </TableRow>

    </TableLayout>

    <ImageView
        android:id="@+id/restart_btn"
        android:layout_width="30dp"
        android:background="@drawable/restart"
        android:backgroundTint="#5A4737"
        android:layout_height="30dp"
        app:layout_constraintTop_toBottomOf="@id/tableLayout"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="25dp"
        android:orientation="horizontal" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="13dp"
        android:layout_marginBottom="55dp"
        android:background="@drawable/border"
        android:textColor="@color/white"
        android:id="@+id/play_with_computer"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="15dp"
        android:text="Play With Computer"
        android:textStyle="bold"
        android:layout_marginHorizontal="20dp"
        android:gravity="center_horizontal"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/win_linear_layout"
        android:paddingHorizontal="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:tint="#0b9eda"
                android:src="@drawable/user"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Player 1: 0"
                android:textColor="#5A4737"
                android:id="@+id/player_one_score"
                android:textSize="20sp"
                android:textStyle="bold|italic"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0 :Player 2"
                android:textColor="#5A4737"
                android:id="@+id/player_two_score"
                android:textSize="20sp"
                android:textStyle="bold|italic"/>

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:tint="#0b9eda"
                android:src="@drawable/user"/>

        </LinearLayout>

    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

